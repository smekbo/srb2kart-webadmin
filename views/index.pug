extends layout

block content
  div#data(style="display:none") !{data}

  h1 SRB Kart Addons
  p Loaded on (Server info goes here)

  div.upload 
    form(action="/upload", method="post", enctype="multipart/form-data")
      h2 Upload an Addon
      input(type="file", accept=".wad, .pk3, .lua, .jpg", name="addon")
      p
        button Submit

  div#app
    table.pure-table.pure-table-horizontal
      thead
        tr
          th Name
          th Extension
      tbody
        tr(v-for="file in files")
          td {{ file.filename }}
          td {{ file.extension }}
